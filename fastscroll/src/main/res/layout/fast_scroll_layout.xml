<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">

    <TextView
        android:id="@+id/fastscroller_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:background="@drawable/fastscroll_popup_bg"
        android:gravity="center"
        android:textColor="#FFffffff"
        android:text="A"
        android:textSize="@dimen/font_size_popup"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/scrollbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true">

        <View
            android:id="@+id/track"
            android:layout_width="@dimen/thumb_width"
            android:layout_height="match_parent"
            android:background="@drawable/fastscroll_track_bg"/>

        <ImageView
            android:id="@+id/fastscroller_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:src="@drawable/fastscroll_thumb_bg"
            tools:ignore="RtlSymmetry"/>

    </RelativeLayout>

</merge>
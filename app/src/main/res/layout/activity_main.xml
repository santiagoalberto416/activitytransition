<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.greatcall.activitytransition.MainActivity">


    <com.greatcall.uilibrary.views.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_custom_action_bar"
        android:transitionName="@string/bar"
        />

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:id="@+id/blueView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#0000ff"
        android:transitionName="@string/blue_name">

        <TextView
            android:id="@+id/textExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example text"/>

    </RelativeLayout>

</LinearLayout>

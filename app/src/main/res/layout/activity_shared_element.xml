<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.greatcall.activitytransition.SharedElementActivity">

    <com.greatcall.uilibrary.views.ActionBar
        android:id="@+id/action_bar"
        android:transitionName="@string/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_custom_action_bar"
        android:layout_marginBottom="8dp"
        />

    <include layout="@layout/app_list_section">
    </include>

    <include layout="@layout/single_item_history">
    </include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/optionRecycler"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
